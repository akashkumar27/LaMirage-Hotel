<div class="container mt-5">
    <div class="card">
        <div class="card-body">
          <h2>Sign in</h2>
          <hr>
          <!-- Makes POST request to /register route -->
          <form action="/signin" method="POST">
            <div class="form-group email">
              <input type="email" class="form-control" name="username" required placeholder="Email">
            </div>
            <div class="form-group password"><input type="password" class="form-control" name="password" required minlength="8" maxlength="25" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-dark login" style="margin: 3% auto 6%;">Login</button>
          </form>
          
          <a style="text-decoration: none; margin-top: 8%;;" href="/forget-password">Forgot Password</a>

          <p class="msg" style="font-size: smaller; text-align: center;">Does'nt have an account? <a style="text-decoration: none;" href="/signup">Sign up</a></p>
          <hr>
          <div class="icons">
            <a class="btn btn-social-icon btn-google" href="/auth/google" role="button">
              <span class="fa fa-google"></span>
            </a>
            <a class="btn btn-social-icon btn-microsoft" href="/auth/microsoft" role="button">
              <span class="fa fa-windows"></span>
