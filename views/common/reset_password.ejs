<div class="container mt-5" style="display: inline-block;">
    <div class="card">
        <div class="card-body">
          <h2>Sign in</h2>
          <hr>
          <!-- Makes POST request to /register route -->
          <form action="/reset-password" method="POST">
            
            <input type="hidden" name="username" value="<%= username %>">
            <div class="form-group email">
              <input type="password" class="form-control" style="margin-top: 3%;" name="pass" id="pass" maxlength="20" minlength="8" required placeholder="New Password">
            </div>
            <div class="form-group email">
                <input type="password" class="form-control" style="margin-top: 3%;" name="cnf_pass" id="cnf_pass" maxlength="20" minlength="8" oninput="check(this)" required placeholder="Confirm Password">
              </div>
            <button type="submit" class="btn btn-dark login" style="margin: 5% auto 6%;">Update Password</button>
          </form>
        </div>
      </div>
    </div>
</div>

